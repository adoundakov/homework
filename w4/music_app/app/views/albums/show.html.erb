<h2><%= @album.title %></h2>

<%= link_to 'Back to band', band_url(@album.band) %>

<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <font color='#FF0000'><%= error %></font>
    <br>
  <% end %>
<% end %>
<br>
Tracks on album:
<br>
<% @album.tracks.each do |track| %>
  <%= link_to track.title, track_url(track) %>
<% end %>

<%= button_to 'Edit Album', edit_album_url(@album), method: :get %>
<%= button_to 'Create Track', new_album_track_url(@album), method: :get %>

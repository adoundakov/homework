<h2>New Track!</h2>
<%= link_to 'Back to bands', bands_url %>
<% if flash.now[:errors] %>
  <% flash.now[:errors].each do |error| %>
    <font color='#FF0000'><%= error %></font>
    <br>
  <% end %>
<% end %>

<form action='<%= tracks_url %>' method="post">
  <%= auth_token %>
  <label>Title
    <input type="text" name="track[title]">
  </label>
  <br>

  <label>Album
    <select name="track[album_id]">
      <option>Select an Album</option>
      <% Album.all.each do |album| %>
        <option value=" <%= album.id %> "> <%= album.title %> </option>
      <% end %>
    </select>
  </label>
  <br>

  <label>Track Type <br>
    <label for="track_type_bonus">Bonus</label>
    <input id='track_type_bonus' type="radio" name="track[track_type]" value="bonus">
    <label for="track_type_regular">Regular</label>
    <input id='track_type_regular' type="radio" name="track[track_type]" value="regular">
  </label>
  <br>

  <input type="submit" name="Create Track" value="Create Track">
</form>
<br>

<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user %>
      <%= current_user.email %> <br>
      <%= button_to 'Profile', user_url(current_user), method: :get %>
      <%= button_to 'Logout', session_url, method: :delete %>
    <% end %>

    <font color='#008000'><%= flash.now[:success] if flash.now[:success] %></font>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

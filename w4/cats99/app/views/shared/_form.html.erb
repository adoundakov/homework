<% action_url = action == :create ? cats_url : edit_cat_url(@cat) %>

<form action= <%= action_url %> method="POST">

  <% if action == :edit  %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label>Name
  <input type="text" name="cat[name]" value= <%= @cat.name %>>
  </label>
  <br>

  <label>Birth Date
  <input type="date" name="cat[birth_date]" value= <%= @cat.birth_date %>>
  </label>
  <br>

  <label for="cat[sex]">Sex</label>
  M<input type="radio" name="cat[sex]" value="M" <%= 'checked' if @cat.sex == "M" %>>
  F<input type="radio" name="cat[sex]" value="F" <%= 'checked' if @cat.sex == "F" %>>
  <br>

  <label>Color
  <input type="text" name="cat[color]" value= <%= @cat.color %> >
  </label>
  <br>

  <label>Description
  <textarea name="cat[description]"> <%= @cat.description %></textarea>
  </label>
  <br>

  <input type="submit">
</form>
